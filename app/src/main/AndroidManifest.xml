<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodWorld"
        tools:targetApi="31">
        <activity
            android:name=".UserApp.Activity.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".UserApp.Activity.MenuDeatial"
            android:exported="false" />
        <activity
            android:name=".UserApp.Activity.Choose_location_Activity"
            android:exported="true" />
        <activity
            android:name=".UserApp.Activity.SingUpActivity"
            android:exported="false" />
        <activity
            android:name=".UserApp.Activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".UserApp.Activity.StartActivity"
            android:exported="false" />
        <activity
            android:name=".UserApp.Activity.splashScreen"
            android:exported="true" />
        <activity
            android:name=".UserApp.Activity.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>